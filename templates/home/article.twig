{% extends "home/base.twig" %}
{% block title %}首页{% endblock %}
{% block content %}
    <div class="page-header">
        <h1>{{ article.title }}</h1>
        <ul class="list-inline text-muted">
            <li>发布时间：{{ article.created_at }}</li>
            <li>作者：{{ article.user.nickname }}</li>
            <li>评论：0</li>
        </ul>
    </div>
    {% if article.summary %}
        <div class="well">{{ article.summary }}</div>
    {% endif %}
    <div class="article">{{ article.content|raw }}</div>
{% endblock %}
